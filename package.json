  "homepage": "https://github.com/oddnetworks/oddworks",
  "dependencies": {
    "bluebird": "~3.4.0",
    "body-parser": "~1.15.0",
    "boom": "~3.2.0",
    "debug": "~2.2.0",
    "dynamodb-marshaler": "~2.0.0",
    "express": "~4.14.0",
    "header-parser": "~1.0.0",
    "jsonwebtoken": "~7.0.0",
    "lodash": "~3.10.0",
    "node-uuid": "~1.4.0",
    "oddcast": "~2.0.0",
    "redis-search": "~0.0.1"
  },
  "devDependencies": {
    "aws-sdk": "~2.4.0",
    "dynalite": "~1.0.0",
    "fakeredis": "~1.0.0",
    "jasmine": "~2.4.0",
    "nsp": "~2.4.0",
    "xo": "~0.15.0"
  },
  "xo": {
    "esnext": true,
